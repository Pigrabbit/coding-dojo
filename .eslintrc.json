{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "semi": ["error", "never"],
        "no-plusplus": "off",
        "no-bitwise": "off",
        "no-underscore-dangle": "off",
        "no-param-reassign": "warn",
        "no-use-before-define": "off"
    }
}
